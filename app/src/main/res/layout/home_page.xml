<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout for the HomePage activity -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context=".HomePage">

    <!-- "learning python" text -->
    <TextView
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:id="@+id/LearningPython"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:textSize="35sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:text="@string/learning_python" />

    <!-- Python icon -->
    <ImageView
        android:id="@+id/PythonIcon"
        android:layout_width="180dp"
        android:layout_height="168dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/python_programming_language_icon"
        android:contentDescription="@string/app_name" />

    <!-- "with Libby Pashinsky" text -->
    <TextView
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:id="@+id/WithLibbyPashinsky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280dp"
        android:textSize="18sp"
        android:text="@string/with_libby_pashinsky"
        android:textColor="#FFFFFF" />

    <!-- Start button -->
    <Button
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="590dp"
        android:text="@string/press_continue"
        android:textSize="20sp" />

    <!-- FrameLayout for LoginFragment -->
    <FrameLayout
        android:id="@+id/fragment_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <!-- FrameLayout for RegisterFragment -->
    <FrameLayout
        android:id="@+id/fragment_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

</FrameLayout>