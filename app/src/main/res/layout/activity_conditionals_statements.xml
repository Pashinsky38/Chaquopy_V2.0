<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout for the ConditionalsStatements activity -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ConditionalsStatements">

    <!-- ScrollView to allow scrolling if content exceeds screen height -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- LinearLayout to arrange content vertically -->
        <LinearLayout
            android:padding="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title TextView: "Conditional Statements" -->
            <TextView
                android:id="@+id/conditional_statements_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/conditional_statements_title"
                android:textColor="#FFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Explanation TextView: Describes conditional statements -->
            <TextView
                android:id="@+id/conditional_statements_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/conditional_statements_explanation"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Text-to-Speech Button: Reads the conditional statements explanation aloud -->
            <Button
                android:id="@+id/textToSpeechButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/text_to_speech_button" />

            <!-- Code Example TextView: Shows an example of conditional statements -->
            <TextView
                android:id="@+id/operators_explanation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/comparison_operators_explanation"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Code Example TextView: Compares values using comparison operators -->
            <TextView
                android:id="@+id/operators_comparison_example1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/comparison_operators_example"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Explanation TextView: Describes logical operators (and, or, not) -->
            <TextView
                android:id="@+id/logical_operators_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/logical_operators_explanation"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Code Example TextView: Shows examples of logical operators -->
            <TextView
                android:id="@+id/logical_operators_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/logical_operators_example"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Code Example TextView: Shows an example of conditional statements with logical operators -->
            <TextView
                android:id="@+id/conditional_statement_example5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/conditional_statement_example"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Challenge TextView: Encourages the user to create a program -->
            <TextView
                android:id="@+id/challengeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/conditional_statements_challenge"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- EditText for entering Python code -->
            <EditText
                android:id="@+id/codeEditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:hint="@string/code_editor_hint"
                android:inputType="textMultiLine"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:textSize="16sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="Autofill" />

            <!-- Button to run the entered Python code -->
            <Button
                android:id="@+id/runCodeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/run_code_button" />

            <!-- TextView to display the output of the executed Python code -->
            <TextView
                android:id="@+id/outputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#FFFF"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                android:textSize="16sp" />

            <!-- Button to go to ConditionalsStatementsPractice -->
            <Button
                android:id="@+id/goToConditionalsPracticeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/go_to_practice_button" />
        </LinearLayout>
    </ScrollView>

    <!-- FrameLayout to hold ConditionalsStatementsPractice fragment -->
    <FrameLayout
        android:id="@+id/fragment_conditionals_practice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

</FrameLayout>