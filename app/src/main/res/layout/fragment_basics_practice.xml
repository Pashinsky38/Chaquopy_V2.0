<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout for the BasicsPracticeFragment -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start"
    android:padding="16sp"
    tools:context=".BasicsPracticeFragment">

    <!-- ScrollView to allow scrolling if content exceeds screen height -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- LinearLayout to arrange content vertically -->
        <LinearLayout
            android:padding="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title of the practice section -->
            <TextView
                android:id="@+id/practice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/practice_title"
                android:textColor="#FFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Instruction TextView: Tells the user to type the output precisely -->
            <TextView
                android:id="@+id/instruction_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="10sp"
                android:text="@string/instruction_text"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Question 1 Section -->
            <!-- Code snippet for Question 1 -->
            <TextView
                android:id="@+id/question1_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:text="@string/question1_code"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- EditText for user to input answer for Question 1 -->
            <EditText
                android:id="@+id/question1_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:hint="@string/enter_output_hint"
                android:inputType="text"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textSize="20sp"
                tools:ignore="Autofill"
                android:textDirection="ltr"/>

            <!-- Question 2 Section -->
            <!-- Code snippet for Question 2 -->
            <TextView
                android:id="@+id/question2_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:text="@string/question2_code"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- EditText for user to input answer for Question 2 -->
            <EditText
                android:id="@+id/question2_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:hint="@string/enter_output_hint"
                android:inputType="text"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textSize="20sp"
                tools:ignore="Autofill"
                android:textDirection="ltr"/>

            <!-- Question 3 Section -->
            <!-- Code snippet for Question 3 -->
            <TextView
                android:id="@+id/question3_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:text="@string/question3_code"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- EditText for user to input answer for Question 3 -->
            <EditText
                android:id="@+id/question3_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:hint="@string/enter_output_hint"
                android:inputType="text"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textSize="20sp"
                tools:ignore="Autofill"
                android:textDirection="ltr"/>

            <!-- Button to check the answers -->
            <Button
                android:id="@+id/check_answers_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24sp"
                android:text="@string/check_answers_button"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- TextView to display the results -->
            <TextView
                android:id="@+id/results_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Button to show the solution -->
            <Button
                android:id="@+id/showSolutionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16sp"
                android:text="@string/show_solution_button"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Button to go to Conditional Statements Activity -->
            <Button
                android:id="@+id/goToConditionalStatementsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/go_to_conditional_statements" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>