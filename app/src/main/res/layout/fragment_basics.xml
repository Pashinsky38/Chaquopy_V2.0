<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout for the BasicsFragment -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start"
    tools:context=".BasicsFragment">

    <!-- ScrollView allows the content to be scrollable if it exceeds the screen height -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- LinearLayout to arrange content vertically -->
        <LinearLayout
            android:padding="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title TextView: "Starting with the basics" -->
            <TextView
                android:id="@+id/Starting_with_basics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/basics_title"
                android:textColor="#FFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Explanation TextView: Describes the use of the print() function in Python -->
            <TextView
                android:id="@+id/explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/print_explanation"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Code Example TextView: Shows an example of the print() function -->
            <TextView
                android:id="@+id/codeExample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/print_example"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Newline and Concatenation TextView: Explains how to use \n and + in Python -->
            <TextView
                android:id="@+id/newline_and_concatenation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/newline_and_concatenation"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Code Example 2 TextView: Shows an example of \n and + in Python -->
            <TextView
                android:id="@+id/codeExample2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/newline_example"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Challenge TextView: Prompts the user to try printing their name and age -->
            <TextView
                android:id="@+id/challengeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/basics_challenge"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- EditText for user to enter Python code -->
            <EditText
                android:id="@+id/codeEditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:hint="@string/code_editor_hint_basics"
                android:inputType="textMultiLine"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:textSize="20sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="Autofill" />

            <!-- Button to run the code entered in the EditText -->
            <Button
                android:id="@+id/runCodeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/run_code_button" />

            <!-- TextView to display the output of the Python code -->
            <TextView
                android:id="@+id/outputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#FFFF"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                android:textSize="20sp" />

            <!-- Button to navigate to VariablesFragment -->
            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100sp"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/next_button" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>