<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout for the FunctionsPracticeFragment -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start"
    android:fitsSystemWindows="true"
    tools:context=".FunctionsPractice">

    <!-- ScrollView to allow scrolling if content exceeds screen height -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- LinearLayout to arrange content vertically -->
        <LinearLayout
            android:padding="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title of the practice section -->
            <TextView
                android:id="@+id/practice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/functions_practice_title"
                android:textColor="#FFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- Question 1 -->
            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/functions_question1"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- EditText for user to input code for Question 1 -->
            <EditText
                android:id="@+id/codeEditor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:hint="@string/code_editor_hint"
                android:inputType="textMultiLine"
                android:padding="8sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="Autofill" />

            <!-- Button to run the code for Question 1 -->
            <Button
                android:id="@+id/runCodeButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/run_code_button" />

            <!-- TextView to display the output of Question 1 -->
            <TextView
                android:id="@+id/output_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#FFFF"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                android:textSize="16sp" />

            <!-- TextView to display the solution for Question 1 (initially gone) -->
            <TextView
                android:id="@+id/solution_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#FFFF"
                android:background="#33000000"
                android:padding="8sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                android:textSize="16sp"
                android:visibility="gone" />

            <!-- Question 2 -->
            <TextView
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/functions_question2"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr" />

            <!-- EditText for user to input code for Question 2 -->
            <EditText
                android:id="@+id/codeEditor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:hint="@string/code_editor_hint"
                android:inputType="textMultiLine"
                android:padding="8sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="Autofill" />

            <!-- Button to run the code for Question 2 -->
            <Button
                android:id="@+id/runCodeButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/run_code_button" />

            <!-- TextView to display the output of Question 2 -->
            <TextView
                android:id="@+id/output_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#FFFF"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                android:textSize="16sp" />

            <!-- TextView to display the solution for Question 2 (initially gone) -->
            <TextView
                android:id="@+id/solution_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#FFFF"
                android:background="#33000000"
                android:padding="8sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                android:textSize="16sp"
                android:visibility="gone" />

            <!-- Show Solution Button (initially hidden) -->
            <Button
                android:id="@+id/showSolutionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/show_solution_button"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>