<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout for the VariablesFragment -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start"
    android:fitsSystemWindows="true"
    android:padding="16sp"
    tools:context=".VariablesFragment">

    <!-- ScrollView allows the content to be scrollable if it exceeds the screen height -->
    <ScrollView
        android:id="@+id/scrollViewVariables"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- LinearLayout to arrange content vertically -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title of the variables section -->
            <TextView
                android:id="@+id/variables_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Variables in Python"
                android:textColor="#FFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <!-- Explanation of variables -->
            <TextView
                android:id="@+id/variables_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Variables are used to store data. You can think of them as containers that hold values. To create a variable, you choose a name and assign a value to it using the '=' operator."
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <!-- Example of variables -->
            <TextView
                android:id="@+id/variables_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="name = 'Libby'\nage = 30\nprint(name)\nprint(age)"
                android:textColor="#FFFF"
                android:textSize="18sp"
                android:textStyle="italic"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <!-- Rules for variable names -->
            <TextView
                android:id="@+id/variables_rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Variable names must start with a letter or an underscore, and can contain letters, numbers, and underscores. They are case-sensitive."
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <!-- Example of valid and invalid variable names -->
            <TextView
                android:id="@+id/variables_rules_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="valid_name = 10\n_another_valid_name = 'Hello'\nmyVariable123 = True\n\n# Invalid:\n# 123variable = 5 (starts with a number)\n# my-variable = 'test' (contains a hyphen)"
                android:textColor="#FFFF"
                android:textSize="18sp"
                android:textStyle="italic"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <!-- Explanation of operators -->
            <TextView
                android:id="@+id/operators_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Python supports various mathematical operators:"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <!-- Example of operators -->
            <TextView
                android:id="@+id/operators_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Addition: +\nSubtraction: -\nMultiplication: *\nDivision: /\nModulo (remainder): %\nExponentiation: **"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:textStyle="italic"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <!-- Example of operators in use -->
            <TextView
                android:id="@+id/operators_in_use_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="x = 10\ny = 3\nprint(x + y)  # Output: 13\nprint(x - y)  # Output: 7\nprint(x * y)  # Output: 30\nprint(x / y)  # Output: 3.333...\nprint(x % y)  # Output: 1\nprint(x ** y) # Output: 1000"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:textStyle="italic"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <!-- Challenge TextView: Prompts the user to try creating variables -->
            <TextView
                android:id="@+id/variables_challenge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Now it's your turn! Try creating a variable with your name and another with your age, then print them!"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <!-- EditText for entering Python code -->
            <EditText
                android:id="@+id/code_editor_variables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:hint="Enter Python code here"
                android:inputType="textMultiLine"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="Autofill,HardcodedText" />

            <!-- Button to run the entered code -->
            <Button
                android:id="@+id/run_code_button_variables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:text="Run Code"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                tools:ignore="HardcodedText" />

            <!-- TextView to display the output of the code -->
            <TextView
                android:id="@+id/output_text_variables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:textColor="#FFFF"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"/>

            <!-- Button to go to BasicsPracticeFragment -->
            <Button
                android:id="@+id/goToPracticeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:text="Go to Practice"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>